<p id="notice"><%= notice %></p>

<p>
  <h3> <%= @idea.name %> </h3>
</p>


<%= image_tag(@idea.picture_url, :size => "150x150") if @idea.picture.present? %>

<p>
  <%= @idea.description %>
</p>



<div class="btn-group">
  <%= link_to 'Edit', edit_idea_path(@idea), :class => 'btn' %>
  <%= link_to 'Back', ideas_path, :class => 'btn' %>
</div>
